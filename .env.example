# =============================================================================
# AI Book Author Pro - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to source control!
# =============================================================================

# Database Configuration
# ---------------------
# For local SQLite (default - no config needed):
# DATABASE_PROVIDER=SQLite
# DATABASE_CONNECTION_STRING=Data Source=aibook.db

# For Neon PostgreSQL cloud database:
DATABASE_PROVIDER=PostgreSQL
DATABASE_URL=postgresql://user:password@host/database?sslmode=require

# Optional: Enable cloud sync (local SQLite + Neon backup)
ENABLE_CLOUD_SYNC=false
NEON_CONNECTION_STRING=

# Stack Auth (User Authentication)
# --------------------------------
STACK_AUTH_PROJECT_ID=your-project-id
STACK_AUTH_PUBLISHABLE_KEY=pck_xxx
STACK_AUTH_SECRET_KEY=ssk_xxx

# E2B (Code Execution Sandbox)
# ----------------------------
E2B_API_KEY=e2b_xxx

# AI Provider API Keys
# --------------------
ANTHROPIC_API_KEY=sk-ant-xxx
OPENAI_API_KEY=sk-xxx
GEMINI_API_KEY=xxx

# Default AI Settings
# -------------------
DEFAULT_AI_PROVIDER=Anthropic
DEFAULT_AI_MODEL=claude-sonnet-4-20250514
DEFAULT_TEMPERATURE=0.7
DEFAULT_MAX_TOKENS=4096

# Application Settings
# --------------------
AUTO_SAVE_INTERVAL_SECONDS=60
MAX_UNDO_HISTORY=100
ENABLE_TELEMETRY=false
