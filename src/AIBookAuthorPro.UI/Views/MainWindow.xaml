<Window
    x:Class="AIBookAuthorPro.UI.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:vm="clr-namespace:AIBookAuthorPro.UI.ViewModels"
    xmlns:views="clr-namespace:AIBookAuthorPro.UI.Views"
    xmlns:controls="clr-namespace:AIBookAuthorPro.UI.Controls"
    mc:Ignorable="d"
    Title="AI Book Author Pro"
    Width="1400"
    Height="900"
    MinWidth="1024"
    MinHeight="768"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized"
    Style="{StaticResource MaterialDesignWindow}"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    Background="{DynamicResource MaterialDesignPaper}"
    TextElement.FontWeight="Regular"
    TextElement.FontSize="14"
    FontFamily="{materialDesign:MaterialDesignFont}"
    d:DataContext="{d:DesignInstance Type=vm:MainViewModel}">

    <Window.InputBindings>
        <!-- File Operations -->
        <KeyBinding Key="N" Modifiers="Control" Command="{Binding NewProjectCommand}"/>
        <KeyBinding Key="O" Modifiers="Control" Command="{Binding OpenProjectCommand}"/>
        <KeyBinding Key="S" Modifiers="Control" Command="{Binding SaveProjectCommand}"/>
        <KeyBinding Key="S" Modifiers="Control+Shift" Command="{Binding SaveProjectAsCommand}"/>
        <KeyBinding Key="W" Modifiers="Control" Command="{Binding CloseProjectCommand}"/>
        <KeyBinding Key="E" Modifiers="Control+Shift" Command="{Binding ShowExportDialogCommand}"/>

        <!-- Navigation -->
        <KeyBinding Key="D1" Modifiers="Control" Command="{Binding NavigateToStringCommand}" CommandParameter="Dashboard"/>
        <KeyBinding Key="D2" Modifiers="Control" Command="{Binding NavigateToStringCommand}" CommandParameter="Editor"/>
        <KeyBinding Key="D3" Modifiers="Control" Command="{Binding NavigateToStringCommand}" CommandParameter="Characters"/>
        <KeyBinding Key="D4" Modifiers="Control" Command="{Binding NavigateToStringCommand}" CommandParameter="Locations"/>
        <KeyBinding Key="D5" Modifiers="Control" Command="{Binding NavigateToStringCommand}" CommandParameter="Outline"/>
        <KeyBinding Key="G" Modifiers="Control+Shift" Command="{Binding StartGuidedCreationCommand}"/>

        <!-- Application -->
        <KeyBinding Key="OemComma" Modifiers="Control" Command="{Binding ShowSettingsCommand}"/>
        <KeyBinding Key="B" Modifiers="Control" Command="{Binding ToggleNavigationCommand}"/>
        <KeyBinding Key="F11" Command="{Binding ToggleFullScreenCommand}"/>
    </Window.InputBindings>

    <materialDesign:DialogHost
        Identifier="MainDialogHost"
        DialogTheme="Inherit"
        CloseOnClickAway="False">

        <Grid>
            <Grid.ColumnDefinitions>
                <!-- Navigation Rail -->
                <ColumnDefinition Width="Auto"/>
                <!-- Main Content -->
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Navigation Rail -->
            <materialDesign:Card
                Grid.Column="0"
                UniformCornerRadius="0"
                materialDesign:ElevationAssist.Elevation="Dp2">

                <Grid Width="{Binding IsNavigationExpanded, Converter={StaticResource BoolToWidthConverter}}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- App Logo -->
                    <StackPanel
                        Grid.Row="0"
                        Margin="16"
                        HorizontalAlignment="Center">
                        <materialDesign:PackIcon
                            Kind="BookOpenPageVariant"
                            Width="40"
                            Height="40"
                            HorizontalAlignment="Center"
                            Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                        <TextBlock
                            Text="AI Book Author"
                            FontSize="12"
                            FontWeight="Medium"
                            HorizontalAlignment="Center"
                            Margin="0,8,0,0"
                            Visibility="{Binding IsNavigationExpanded, Converter={StaticResource BoolToVisibility}}"/>
                    </StackPanel>

                    <!-- Quick Start / Guided Creation Button -->
                    <Button
                        Grid.Row="1"
                        Style="{StaticResource MaterialDesignRaisedAccentButton}"
                        Command="{Binding StartGuidedCreationCommand}"
                        ToolTip="Start Guided Book Creation (Ctrl+Shift+G)"
                        Margin="12,0,12,16">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="AutoFix" Width="20" Height="20" VerticalAlignment="Center"/>
                            <TextBlock
                                Text="Create Book"
                                Margin="8,0,0,0"
                                VerticalAlignment="Center"
                                Visibility="{Binding DataContext.IsNavigationExpanded, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BoolToVisibility}}"/>
                        </StackPanel>
                    </Button>

                    <!-- Navigation Items -->
                    <ListBox
                        Grid.Row="2"
                        x:Name="NavigationList"
                        SelectedItem="{Binding SelectedNavigationItem}"
                        Style="{StaticResource MaterialDesignNavigationPrimaryListBox}"
                        Margin="8,0">

                        <ListBoxItem
                            Tag="Dashboard"
                            IsEnabled="{Binding IsProjectOpen}"
                            ToolTip="Dashboard (Ctrl+1)">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="ViewDashboard" Width="24" Height="24"/>
                                <TextBlock
                                    Text="Dashboard"
                                    Margin="16,0,0,0"
                                    VerticalAlignment="Center"
                                    Visibility="{Binding DataContext.IsNavigationExpanded, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BoolToVisibility}}"/>
                            </StackPanel>
                        </ListBoxItem>

                        <ListBoxItem
                            Tag="Editor"
                            IsEnabled="{Binding IsProjectOpen}"
                            ToolTip="Editor (Ctrl+2)">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="FileDocumentEdit" Width="24" Height="24"/>
                                <TextBlock
                                    Text="Editor"
                                    Margin="16,0,0,0"
                                    VerticalAlignment="Center"
                                    Visibility="{Binding DataContext.IsNavigationExpanded, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BoolToVisibility}}"/>
                            </StackPanel>
                        </ListBoxItem>

                        <ListBoxItem
                            Tag="Characters"
                            IsEnabled="{Binding IsProjectOpen}"
                            ToolTip="Characters (Ctrl+3)">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="AccountGroup" Width="24" Height="24"/>
                                <TextBlock
                                    Text="Characters"
                                    Margin="16,0,0,0"
                                    VerticalAlignment="Center"
                                    Visibility="{Binding DataContext.IsNavigationExpanded, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BoolToVisibility}}"/>
                            </StackPanel>
                        </ListBoxItem>

                        <ListBoxItem
                            Tag="Locations"
                            IsEnabled="{Binding IsProjectOpen}"
                            ToolTip="Locations (Ctrl+4)">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="MapMarker" Width="24" Height="24"/>
                                <TextBlock
                                    Text="Locations"
                                    Margin="16,0,0,0"
                                    VerticalAlignment="Center"
                                    Visibility="{Binding DataContext.IsNavigationExpanded, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BoolToVisibility}}"/>
                            </StackPanel>
                        </ListBoxItem>

                        <ListBoxItem
                            Tag="Outline"
                            IsEnabled="{Binding IsProjectOpen}"
                            ToolTip="Outline (Ctrl+5)">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="FileTree" Width="24" Height="24"/>
                                <TextBlock
                                    Text="Outline"
                                    Margin="16,0,0,0"
                                    VerticalAlignment="Center"
                                    Visibility="{Binding DataContext.IsNavigationExpanded, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BoolToVisibility}}"/>
                            </StackPanel>
                        </ListBoxItem>

                        <Separator Margin="8,8"/>

                        <ListBoxItem
                            Tag="GuidedWizard"
                            ToolTip="Book Creation Wizard">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Wizard" Width="24" Height="24"/>
                                <TextBlock
                                    Text="Wizard"
                                    Margin="16,0,0,0"
                                    VerticalAlignment="Center"
                                    Visibility="{Binding DataContext.IsNavigationExpanded, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BoolToVisibility}}"/>
                            </StackPanel>
                        </ListBoxItem>

                        <ListBoxItem
                            Tag="GenerationDashboard"
                            ToolTip="Generation Dashboard">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="RocketLaunch" Width="24" Height="24"/>
                                <TextBlock
                                    Text="Generation"
                                    Margin="16,0,0,0"
                                    VerticalAlignment="Center"
                                    Visibility="{Binding DataContext.IsNavigationExpanded, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BoolToVisibility}}"/>
                            </StackPanel>
                        </ListBoxItem>

                        <Separator Margin="8,8"/>

                        <ListBoxItem
                            Tag="Export"
                            IsEnabled="{Binding IsProjectOpen}"
                            ToolTip="Export (Ctrl+Shift+E)">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Export" Width="24" Height="24"/>
                                <TextBlock
                                    Text="Export"
                                    Margin="16,0,0,0"
                                    VerticalAlignment="Center"
                                    Visibility="{Binding DataContext.IsNavigationExpanded, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BoolToVisibility}}"/>
                            </StackPanel>
                        </ListBoxItem>
                    </ListBox>

                    <!-- Bottom Actions -->
                    <StackPanel
                        Grid.Row="3"
                        Margin="8,16">

                        <Button
                            Style="{StaticResource MaterialDesignIconButton}"
                            Command="{Binding ShowSettingsCommand}"
                            ToolTip="Settings (Ctrl+,)"
                            HorizontalAlignment="Center">
                            <materialDesign:PackIcon Kind="Cog" Width="24" Height="24"/>
                        </Button>

                        <Button
                            Style="{StaticResource MaterialDesignIconButton}"
                            Command="{Binding ToggleNavigationCommand}"
                            ToolTip="Toggle Navigation (Ctrl+B)"
                            HorizontalAlignment="Center"
                            Margin="0,8,0,0">
                            <materialDesign:PackIcon
                                Width="24"
                                Height="24">
                                <materialDesign:PackIcon.Style>
                                    <Style TargetType="materialDesign:PackIcon">
                                        <Setter Property="Kind" Value="ChevronLeft"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsNavigationExpanded}" Value="False">
                                                <Setter Property="Kind" Value="ChevronRight"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </materialDesign:PackIcon.Style>
                            </materialDesign:PackIcon>
                        </Button>
                    </StackPanel>
                </Grid>
            </materialDesign:Card>

            <!-- Main Content Area -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Top Toolbar -->
                <materialDesign:Card
                    Grid.Row="0"
                    UniformCornerRadius="0"
                    Padding="16,8">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- File Operations -->
                        <StackPanel
                            Grid.Column="0"
                            Orientation="Horizontal">

                            <Button
                                Style="{StaticResource MaterialDesignIconButton}"
                                Command="{Binding NewProjectCommand}"
                                ToolTip="New Project (Ctrl+N)">
                                <materialDesign:PackIcon Kind="FilePlus"/>
                            </Button>

                            <Button
                                Style="{StaticResource MaterialDesignIconButton}"
                                Command="{Binding OpenProjectCommand}"
                                ToolTip="Open Project (Ctrl+O)">
                                <materialDesign:PackIcon Kind="FolderOpen"/>
                            </Button>

                            <Button
                                Style="{StaticResource MaterialDesignIconButton}"
                                Command="{Binding SaveProjectCommand}"
                                ToolTip="Save (Ctrl+S)">
                                <materialDesign:PackIcon Kind="ContentSave"/>
                            </Button>

                            <Separator
                                Style="{StaticResource MaterialDesignDarkSeparator}"
                                Margin="8,4"/>

                            <!-- Project Name -->
                            <TextBlock
                                Text="{Binding CurrentProject.Name, FallbackValue='No Project Open'}"
                                FontSize="16"
                                FontWeight="Medium"
                                VerticalAlignment="Center"
                                Margin="8,0"/>

                            <materialDesign:Chip
                                Content="Unsaved"
                                IconBackground="{DynamicResource MaterialDesignWarning}"
                                Visibility="{Binding HasUnsavedChanges, Converter={StaticResource BoolToVisibility}}"
                                Margin="8,0,0,0">
                                <materialDesign:Chip.Icon>
                                    <materialDesign:PackIcon Kind="AlertCircle"/>
                                </materialDesign:Chip.Icon>
                            </materialDesign:Chip>
                        </StackPanel>

                        <!-- Center - Page Title -->
                        <TextBlock
                            Grid.Column="1"
                            Text="{Binding CurrentPageTitle}"
                            FontSize="18"
                            FontWeight="Medium"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"/>

                        <!-- Right Side Actions -->
                        <StackPanel
                            Grid.Column="2"
                            Orientation="Horizontal">

                            <controls:StatusIndicator
                                x:Name="AppStatus"
                                Margin="0,0,16,0"/>

                            <Button
                                Style="{StaticResource MaterialDesignIconButton}"
                                Command="{Binding ShowHelpCommand}"
                                ToolTip="Help (F1)">
                                <materialDesign:PackIcon Kind="HelpCircle"/>
                            </Button>
                        </StackPanel>
                    </Grid>
                </materialDesign:Card>

                <!-- Content Frame -->
                <Frame
                    x:Name="ContentFrame"
                    Grid.Row="1"
                    NavigationUIVisibility="Hidden"/>

                <!-- Status Bar -->
                <materialDesign:Card
                    Grid.Row="2"
                    UniformCornerRadius="0"
                    Padding="16,4">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Status Message -->
                        <TextBlock
                            Grid.Column="0"
                            Text="{Binding StatusMessage, FallbackValue='Ready'}"
                            FontSize="12"
                            VerticalAlignment="Center"
                            Opacity="0.7"/>

                        <!-- Word Count -->
                        <StackPanel
                            Grid.Column="1"
                            Orientation="Horizontal"
                            Margin="16,0"
                            Visibility="{Binding IsProjectOpen, Converter={StaticResource BoolToVisibility}}">
                            <materialDesign:PackIcon Kind="FormatText" Width="16" Height="16" VerticalAlignment="Center"/>
                            <TextBlock
                                Text="{Binding TotalWordCount, StringFormat='{}{0:N0} words'}"
                                FontSize="12"
                                VerticalAlignment="Center"
                                Margin="4,0,0,0"/>
                        </StackPanel>

                        <!-- Chapter Count -->
                        <StackPanel
                            Grid.Column="2"
                            Orientation="Horizontal"
                            Margin="16,0"
                            Visibility="{Binding IsProjectOpen, Converter={StaticResource BoolToVisibility}}">
                            <materialDesign:PackIcon Kind="FileDocument" Width="16" Height="16" VerticalAlignment="Center"/>
                            <TextBlock
                                Text="{Binding ChapterCount, StringFormat='{}{0} chapters'}"
                                FontSize="12"
                                VerticalAlignment="Center"
                                Margin="4,0,0,0"/>
                        </StackPanel>

                        <!-- Version -->
                        <TextBlock
                            Grid.Column="3"
                            Text="v1.0.0"
                            FontSize="11"
                            VerticalAlignment="Center"
                            Opacity="0.5"/>
                    </Grid>
                </materialDesign:Card>
            </Grid>

            <!-- Notification Host -->
            <views:NotificationHost
                Grid.Column="1"
                x:Name="NotificationHost"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,60,0,0"/>
        </Grid>
    </materialDesign:DialogHost>
</Window>
