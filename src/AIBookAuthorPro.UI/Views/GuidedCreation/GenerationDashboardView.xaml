<UserControl
    x:Class="AIBookAuthorPro.UI.Views.GuidedCreation.GenerationDashboardView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:vm="clr-namespace:AIBookAuthorPro.UI.ViewModels.GuidedCreation"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance Type=vm:GenerationDashboardViewModel}"
    d:DesignHeight="800"
    d:DesignWidth="1200">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top Stats Bar -->
        <Border Grid.Row="0" Padding="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Progress -->
                <materialDesign:Card Grid.Column="0" Padding="16" Margin="0,0,8,0">
                    <StackPanel>
                        <TextBlock Text="Progress" Style="{StaticResource MaterialDesignOverlineTextBlock}"/>
                        <TextBlock Text="{Binding ProgressText}" 
                                   Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                   Margin="0,4,0,0"/>
                        <ProgressBar Value="{Binding OverallProgress}" Maximum="100" 
                                     Height="4" Margin="0,8,0,0"/>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Words -->
                <materialDesign:Card Grid.Column="1" Padding="16" Margin="8,0">
                    <StackPanel>
                        <TextBlock Text="Words Generated" Style="{StaticResource MaterialDesignOverlineTextBlock}"/>
                        <TextBlock Text="{Binding WordsText}" 
                                   Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                   Margin="0,4,0,0"/>
                        <ProgressBar Value="{Binding WordsProgressPercentage}" Maximum="100" 
                                     Height="4" Margin="0,8,0,0"/>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Time -->
                <materialDesign:Card Grid.Column="2" Padding="16" Margin="8,0">
                    <StackPanel>
                        <TextBlock Text="Time" Style="{StaticResource MaterialDesignOverlineTextBlock}"/>
                        <TextBlock Text="{Binding ElapsedTimeText}" 
                                   Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                   Margin="0,4,0,0"/>
                        <TextBlock Text="{Binding RemainingTimeText}" 
                                   Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                   Opacity="0.7" Margin="0,4,0,0"/>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Quality -->
                <materialDesign:Card Grid.Column="3" Padding="16" Margin="8,0">
                    <StackPanel>
                        <TextBlock Text="Avg Quality" Style="{StaticResource MaterialDesignOverlineTextBlock}"/>
                        <TextBlock Text="{Binding QualityText}" 
                                   Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Cost -->
                <materialDesign:Card Grid.Column="4" Padding="16" Margin="8,0,0,0">
                    <StackPanel>
                        <TextBlock Text="Est. Cost" Style="{StaticResource MaterialDesignOverlineTextBlock}"/>
                        <TextBlock Text="{Binding CostText}" 
                                   Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                </materialDesign:Card>
            </Grid>
        </Border>

        <!-- Control Bar -->
        <Border Grid.Row="1" Padding="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Status -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                                 IsIndeterminate="True" Width="24" Height="24"
                                 Visibility="{Binding IsGenerating, Converter={StaticResource BoolToVisibilityConverter}}"/>
                    <materialDesign:PackIcon Kind="Pause" Width="24" Height="24"
                                             Foreground="{DynamicResource MaterialDesignBody}"
                                             Visibility="{Binding IsPaused, Converter={StaticResource BoolToVisibilityConverter}}"/>
                    <materialDesign:PackIcon Kind="CheckCircle" Width="24" Height="24"
                                             Foreground="{DynamicResource PrimaryHueMidBrush}"
                                             Visibility="{Binding IsComplete, Converter={StaticResource BoolToVisibilityConverter}}"/>
                    <TextBlock Text="{Binding StatusMessage}" 
                               Style="{StaticResource MaterialDesignBody1TextBlock}"
                               Margin="12,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Control Buttons -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="Start Generation" 
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Command="{Binding StartGenerationCommand}"
                            Visibility="{Binding CanStart, Converter={StaticResource BoolToVisibilityConverter}}"
                            Margin="0,0,8,0"/>
                    <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                            Command="{Binding PauseGenerationCommand}"
                            Visibility="{Binding CanPause, Converter={StaticResource BoolToVisibilityConverter}}"
                            Margin="0,0,8,0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Pause" VerticalAlignment="Center"/>
                            <TextBlock Text="Pause" Margin="8,0,0,0"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource MaterialDesignRaisedButton}"
                            Command="{Binding ResumeGenerationCommand}"
                            Visibility="{Binding CanResume, Converter={StaticResource BoolToVisibilityConverter}}"
                            Margin="0,0,8,0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Play" VerticalAlignment="Center"/>
                            <TextBlock Text="Resume" Margin="8,0,0,0"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                            Command="{Binding CancelGenerationCommand}"
                            Visibility="{Binding CanCancel, Converter={StaticResource BoolToVisibilityConverter}}"
                            Foreground="{DynamicResource MaterialDesignValidationErrorBrush}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Stop" VerticalAlignment="Center"/>
                            <TextBlock Text="Cancel" Margin="8,0,0,0"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="350"/>
            </Grid.ColumnDefinitions>

            <!-- Chapter Progress List -->
            <materialDesign:Card Grid.Column="0" Margin="0,0,16,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Padding="20,16" 
                            BorderBrush="{DynamicResource MaterialDesignDivider}"
                            BorderThickness="0,0,0,1">
                        <TextBlock Text="Chapter Progress" 
                                   Style="{StaticResource MaterialDesignSubtitle1TextBlock}"/>
                    </Border>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding ChapterProgress}" Margin="12">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{DynamicResource MaterialDesignCardBackground}"
                                            BorderBrush="{DynamicResource MaterialDesignDivider}"
                                            BorderThickness="1" CornerRadius="8"
                                            Padding="16" Margin="0,0,0,8">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Chapter Number -->
                                            <Border Width="40" Height="40" CornerRadius="20"
                                                    Background="{Binding StatusColor}">
                                                <TextBlock Text="{Binding ChapterNumber}" 
                                                           Foreground="White"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"
                                                           FontWeight="Bold"/>
                                            </Border>

                                            <!-- Chapter Info -->
                                            <StackPanel Grid.Column="1" Margin="16,0">
                                                <TextBlock Text="{Binding Title}" FontWeight="Medium"/>
                                                <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                    <TextBlock Text="{Binding Status}" 
                                                               Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                                               Foreground="{Binding StatusColor}"/>
                                                    <TextBlock Text=" â€¢ " Opacity="0.5"/>
                                                    <TextBlock Text="{Binding WordCount, StringFormat={}{0:N0} words}" 
                                                               Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                                               Opacity="0.7"/>
                                                </StackPanel>
                                                <ProgressBar Value="{Binding ProgressPercentage}" Maximum="100" 
                                                             Height="3" Margin="0,8,0,0"
                                                             Visibility="{Binding Status, Converter={StaticResource StringToVisibilityConverter}, ConverterParameter='Generating'}"/>
                                            </StackPanel>

                                            <!-- Quality Score -->
                                            <StackPanel Grid.Column="2" VerticalAlignment="Center" Margin="0,0,16,0"
                                                        Visibility="{Binding IsComplete, Converter={StaticResource BoolToVisibilityConverter}}">
                                                <TextBlock Text="{Binding QualityScore, StringFormat={}{0:F0}}" 
                                                           Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                                           HorizontalAlignment="Center"/>
                                                <TextBlock Text="Quality" 
                                                           Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                                           Opacity="0.7" HorizontalAlignment="Center"/>
                                            </StackPanel>

                                            <!-- Actions -->
                                            <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center">
                                                <Button Style="{StaticResource MaterialDesignIconButton}"
                                                        Command="{Binding DataContext.ApproveChapterCommand, 
                                                            RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding ChapterNumber}"
                                                        ToolTip="Approve"
                                                        Visibility="{Binding NeedsReview, Converter={StaticResource BoolToVisibilityConverter}}">
                                                    <materialDesign:PackIcon Kind="ThumbUp"/>
                                                </Button>
                                                <Button Style="{StaticResource MaterialDesignIconButton}"
                                                        Command="{Binding DataContext.RegenerateChapterCommand, 
                                                            RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding ChapterNumber}"
                                                        ToolTip="Regenerate"
                                                        Visibility="{Binding IsComplete, Converter={StaticResource BoolToVisibilityConverter}}">
                                                    <materialDesign:PackIcon Kind="Refresh"/>
                                                </Button>
                                                <Button Style="{StaticResource MaterialDesignIconButton}"
                                                        Command="{Binding DataContext.SelectChapterCommand, 
                                                            RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding}"
                                                        ToolTip="View Details">
                                                    <materialDesign:PackIcon Kind="ChevronRight"/>
                                                </Button>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </materialDesign:Card>

            <!-- Right Panel -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Live Preview -->
                <materialDesign:Card Grid.Row="0" Margin="0,0,0,16"
                                     Visibility="{Binding ShowLivePreview, Converter={StaticResource BoolToVisibilityConverter}}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" Padding="16,12" 
                                BorderBrush="{DynamicResource MaterialDesignDivider}"
                                BorderThickness="0,0,0,1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Eye" Width="20" Height="20" 
                                                             VerticalAlignment="Center"/>
                                    <TextBlock Text="Live Preview" 
                                               Style="{StaticResource MaterialDesignSubtitle2TextBlock}"
                                               Margin="8,0,0,0" VerticalAlignment="Center"/>
                                </StackPanel>
                                <Button Grid.Column="1" 
                                        Style="{StaticResource MaterialDesignIconButton}"
                                        Command="{Binding ToggleLivePreviewCommand}"
                                        Width="28" Height="28">
                                    <materialDesign:PackIcon Kind="Close" Width="16" Height="16"/>
                                </Button>
                            </Grid>
                        </Border>

                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="16">
                            <TextBlock Text="{Binding LivePreviewContent}" 
                                       TextWrapping="Wrap"
                                       FontFamily="Georgia"
                                       LineHeight="24"/>
                        </ScrollViewer>
                    </Grid>
                </materialDesign:Card>

                <!-- Activity Log -->
                <materialDesign:Card Grid.Row="1"
                                     Visibility="{Binding ShowActivityLog, Converter={StaticResource BoolToVisibilityConverter}}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" Padding="16,12" 
                                BorderBrush="{DynamicResource MaterialDesignDivider}"
                                BorderThickness="0,0,0,1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="History" Width="20" Height="20" 
                                                             VerticalAlignment="Center"/>
                                    <TextBlock Text="Activity Log" 
                                               Style="{StaticResource MaterialDesignSubtitle2TextBlock}"
                                               Margin="8,0,0,0" VerticalAlignment="Center"/>
                                </StackPanel>
                                <Button Grid.Column="1" 
                                        Style="{StaticResource MaterialDesignIconButton}"
                                        Command="{Binding ClearActivityLogCommand}"
                                        ToolTip="Clear Log"
                                        Width="28" Height="28">
                                    <materialDesign:PackIcon Kind="Delete" Width="16" Height="16"/>
                                </Button>
                            </Grid>
                        </Border>

                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding ActivityLog}" Margin="8">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Padding="8,6" Margin="0,0,0,2">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <materialDesign:PackIcon Kind="{Binding Icon}" 
                                                                         Width="16" Height="16"
                                                                         Opacity="0.7"
                                                                         VerticalAlignment="Center"/>
                                                <TextBlock Grid.Column="1" Text="{Binding TimeText}" 
                                                           Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                                           Opacity="0.5" Margin="8,0"
                                                           VerticalAlignment="Center"/>
                                                <TextBlock Grid.Column="2" Text="{Binding Message}" 
                                                           Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                                           TextWrapping="Wrap"
                                                           VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </materialDesign:Card>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
