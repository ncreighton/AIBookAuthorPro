<UserControl
    x:Class="AIBookAuthorPro.UI.Views.GuidedCreation.GuidedCreationWizardView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:vm="clr-namespace:AIBookAuthorPro.UI.ViewModels.GuidedCreation"
    xmlns:local="clr-namespace:AIBookAuthorPro.UI.Views.GuidedCreation"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance Type=vm:GuidedCreationWizardViewModel}"
    d:DesignHeight="800"
    d:DesignWidth="1200">

    <UserControl.Resources>
        <ResourceDictionary>
            <!-- Step indicator style -->
            <Style x:Key="StepIndicatorStyle" TargetType="Border">
                <Setter Property="Width" Value="32"/>
                <Setter Property="Height" Value="32"/>
                <Setter Property="CornerRadius" Value="16"/>
                <Setter Property="Background" Value="{DynamicResource MaterialDesignDivider}"/>
            </Style>

            <!-- Progress indicator template -->
            <DataTemplate x:Key="StepIndicatorTemplate">
                <StackPanel Orientation="Horizontal" Margin="0,8">
                    <Border Style="{StaticResource StepIndicatorStyle}"
                            Background="{Binding IsCurrent, Converter={StaticResource BoolToColorConverter}, 
                                ConverterParameter='Primary|Divider'}">
                        <TextBlock Text="{Binding Step, Converter={StaticResource EnumToIntConverter}}"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"
                                   Foreground="White" FontWeight="Medium"/>
                    </Border>
                    <StackPanel Margin="12,0,0,0" VerticalAlignment="Center">
                        <TextBlock Text="{Binding DisplayName}" 
                                   Style="{StaticResource MaterialDesignBody1TextBlock}"
                                   FontWeight="{Binding IsCurrent, Converter={StaticResource BoolToFontWeightConverter}}"/>
                        <TextBlock Text="{Binding Description}" 
                                   Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                   Opacity="0.7"
                                   Visibility="{Binding IsCurrent, Converter={StaticResource BoolToVisibilityConverter}}"/>
                    </StackPanel>
                </StackPanel>
            </DataTemplate>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel - Step Navigation -->
        <Border Grid.Column="0" 
                Background="{DynamicResource MaterialDesignCardBackground}"
                BorderBrush="{DynamicResource MaterialDesignDivider}"
                BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <StackPanel Grid.Row="0" Margin="24,24,24,16">
                    <TextBlock Text="Guided Creation"
                               Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                               FontWeight="Medium"/>
                    <TextBlock Text="Create your book step by step"
                               Style="{StaticResource MaterialDesignCaptionTextBlock}"
                               Opacity="0.7" Margin="0,4,0,0"/>
                    
                    <!-- Overall Progress -->
                    <StackPanel Margin="0,16,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Overall Progress" 
                                       Style="{StaticResource MaterialDesignCaptionTextBlock}"/>
                            <TextBlock Grid.Column="1" 
                                       Text="{Binding OverallProgressPercentage, StringFormat={}{0:F0}%}"
                                       Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                       FontWeight="Medium"/>
                        </Grid>
                        <ProgressBar Value="{Binding OverallProgressPercentage}" 
                                     Maximum="100" Height="4" Margin="0,8,0,0"/>
                    </StackPanel>
                </StackPanel>

                <!-- Step List -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding Steps}" Margin="24,0">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Command="{Binding DataContext.GoToStepCommand, 
                                            RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding Step}"
                                        Style="{StaticResource MaterialDesignFlatButton}"
                                        HorizontalContentAlignment="Stretch"
                                        Padding="8" Margin="0,2"
                                        IsEnabled="{Binding IsAvailable}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Step Icon -->
                                        <Border Width="36" Height="36" CornerRadius="18"
                                                Background="{Binding IsCurrent, Converter={StaticResource BoolToColorConverter}}">
                                            <materialDesign:PackIcon Kind="{Binding Icon}" 
                                                                     Width="20" Height="20"
                                                                     HorizontalAlignment="Center"
                                                                     VerticalAlignment="Center"
                                                                     Foreground="White"/>
                                        </Border>

                                        <!-- Step Info -->
                                        <StackPanel Grid.Column="1" Margin="12,0,0,0" 
                                                    VerticalAlignment="Center">
                                            <TextBlock Text="{Binding DisplayName}"
                                                       FontWeight="{Binding IsCurrent, Converter={StaticResource BoolToFontWeightConverter}}"/>
                                        </StackPanel>

                                        <!-- Completed Check -->
                                        <materialDesign:PackIcon Grid.Column="2" 
                                                                 Kind="CheckCircle" 
                                                                 Foreground="{DynamicResource PrimaryHueMidBrush}"
                                                                 Visibility="{Binding IsCompleted, Converter={StaticResource BoolToVisibilityConverter}}"
                                                                 Width="20" Height="20"/>
                                    </Grid>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Bottom Actions -->
                <StackPanel Grid.Row="2" Margin="24,16">
                    <Button Content="Save &amp; Exit" 
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Command="{Binding SaveAndExitCommand}"
                            Margin="0,0,0,8"/>
                    <Button Content="Cancel" 
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Command="{Binding CancelWizardCommand}"
                            Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Content Header -->
            <Border Grid.Row="0" Padding="32,24" 
                    Background="{DynamicResource MaterialDesignCardBackground}">
                <StackPanel>
                    <TextBlock Text="{Binding CurrentStepTitle}"
                               Style="{StaticResource MaterialDesignHeadline5TextBlock}"/>
                    <TextBlock Text="{Binding CurrentStepDescription}"
                               Style="{StaticResource MaterialDesignBody1TextBlock}"
                               Opacity="0.7" Margin="0,8,0,0"
                               TextWrapping="Wrap"/>
                </StackPanel>
            </Border>

            <!-- Step Content -->
            <Border Grid.Row="1" Padding="32">
                <ContentControl>
                    <ContentControl.Style>
                        <Style TargetType="ContentControl">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding CurrentStep}" Value="PromptEntry">
                                    <Setter Property="Content">
                                        <Setter.Value>
                                            <local:PromptEntryView DataContext="{Binding PromptEntryViewModel}"/>
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding CurrentStep}" Value="PromptAnalysis">
                                    <Setter Property="Content">
                                        <Setter.Value>
                                            <local:PromptAnalysisView DataContext="{Binding PromptAnalysisViewModel}"/>
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding CurrentStep}" Value="BlueprintReview">
                                    <Setter Property="Content">
                                        <Setter.Value>
                                            <local:BlueprintReviewView DataContext="{Binding BlueprintReviewViewModel}"/>
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding CurrentStep}" Value="Generation">
                                    <Setter Property="Content">
                                        <Setter.Value>
                                            <local:GenerationDashboardView DataContext="{Binding GenerationDashboardViewModel}"/>
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ContentControl.Style>
                </ContentControl>
            </Border>

            <!-- Error Banner -->
            <Border Grid.Row="1" VerticalAlignment="Top" Margin="32,0"
                    Background="{DynamicResource MaterialDesignValidationErrorBrush}"
                    CornerRadius="4" Padding="16"
                    Visibility="{Binding HasError, Converter={StaticResource BoolToVisibilityConverter}}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <materialDesign:PackIcon Kind="AlertCircle" 
                                             Foreground="White" 
                                             Width="24" Height="24"
                                             VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="1" Text="{Binding ErrorMessage}" 
                               Foreground="White" Margin="12,0"
                               VerticalAlignment="Center" TextWrapping="Wrap"/>
                    <Button Grid.Column="2" 
                            Style="{StaticResource MaterialDesignIconButton}"
                            Foreground="White"
                            Command="{Binding ClearErrorCommand}">
                        <materialDesign:PackIcon Kind="Close"/>
                    </Button>
                </Grid>
            </Border>

            <!-- Loading Overlay -->
            <Border Grid.Row="1" 
                    Background="#80000000"
                    Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                                 IsIndeterminate="True" Width="48" Height="48"/>
                    <TextBlock Text="{Binding StatusMessage}" 
                               Foreground="White" Margin="0,16,0,0"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Footer Navigation -->
            <Border Grid.Row="2" Padding="32,16" 
                    Background="{DynamicResource MaterialDesignCardBackground}"
                    BorderBrush="{DynamicResource MaterialDesignDivider}"
                    BorderThickness="0,1,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Status -->
                    <TextBlock Text="{Binding StatusMessage}"
                               Style="{StaticResource MaterialDesignBody2TextBlock}"
                               Opacity="0.7" VerticalAlignment="Center"
                               Visibility="{Binding StatusMessage, Converter={StaticResource StringToVisibilityConverter}}"/>

                    <!-- Navigation Buttons -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button Content="Back" 
                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                Command="{Binding GoBackCommand}"
                                Margin="0,0,16,0"
                                MinWidth="100"/>
                        <Button Content="Continue" 
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                Command="{Binding GoNextCommand}"
                                MinWidth="120"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
