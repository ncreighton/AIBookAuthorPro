<UserControl 
    x:Class="AIBookAuthorPro.UI.Views.CoverView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:vm="clr-namespace:AIBookAuthorPro.UI.ViewModels"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance Type=vm:CoverViewModel}"
    d:DesignHeight="900"
    d:DesignWidth="1400">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
        
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
        </Style>
        
        <Style x:Key="CardStyle" TargetType="materialDesign:Card">
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="UniformCornerRadius" Value="8"/>
        </Style>

        <Style x:Key="CoverImageStyle" TargetType="Image">
            <Setter Property="MaxHeight" Value="400"/>
            <Setter Property="Stretch" Value="Uniform"/>
            <Setter Property="RenderOptions.BitmapScalingMode" Value="HighQuality"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="16,16,16,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock 
                    Text="Book Cover Designer"
                    Style="{StaticResource MaterialDesignHeadline4TextBlock}"/>
                <TextBlock 
                    Text="Generate AI-powered book covers for your publication"
                    Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                    Foreground="{DynamicResource MaterialDesignBodyLight}"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button 
                    Content="Import Cover"
                    Command="{Binding ImportCoverCommand}"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Margin="0,0,8,0"/>
            </StackPanel>
        </Grid>

        <!-- Messages -->
        <StackPanel Grid.Row="0" VerticalAlignment="Bottom" Margin="16,0">
            <materialDesign:Card 
                Padding="12"
                Background="{DynamicResource MaterialDesignErrorBrush}"
                Visibility="{Binding ErrorMessage, Converter={StaticResource BoolToVisConverter}}"
                Margin="0,4">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="{Binding ErrorMessage}" Foreground="White" TextWrapping="Wrap"/>
                    <Button Grid.Column="1" Style="{StaticResource MaterialDesignIconButton}" 
                            Command="{Binding ClearMessagesCommand}" Foreground="White">
                        <materialDesign:PackIcon Kind="Close"/>
                    </Button>
                </Grid>
            </materialDesign:Card>

            <materialDesign:Card 
                Padding="12"
                Background="{DynamicResource MaterialDesignPrimaryHueMidBrush}"
                Visibility="{Binding SuccessMessage, Converter={StaticResource BoolToVisConverter}}"
                Margin="0,4">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="{Binding SuccessMessage}" Foreground="White"/>
                    <Button Grid.Column="1" Style="{StaticResource MaterialDesignIconButton}"
                            Command="{Binding ClearMessagesCommand}" Foreground="White">
                        <materialDesign:PackIcon Kind="Close"/>
                    </Button>
                </Grid>
            </materialDesign:Card>
        </StackPanel>

        <!-- Main Content -->
        <TabControl Grid.Row="1" Margin="8" Style="{StaticResource MaterialDesignFilledTabControl}">
            
            <!-- Generate Tab -->
            <TabItem Header="Generate Cover">
                <Grid Margin="16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="380"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Generation Options -->
                    <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
                        <materialDesign:Card Style="{StaticResource CardStyle}">
                            <StackPanel>
                                <TextBlock Text="Cover Details" Style="{StaticResource SectionHeaderStyle}"/>

                                <TextBox
                                    materialDesign:HintAssist.Hint="Book Title"
                                    materialDesign:HintAssist.IsFloating="True"
                                    Text="{Binding CoverTitle, UpdateSourceTrigger=PropertyChanged}"
                                    Margin="0,0,0,12"/>

                                <TextBox
                                    materialDesign:HintAssist.Hint="Author Name"
                                    materialDesign:HintAssist.IsFloating="True"
                                    Text="{Binding CoverAuthor, UpdateSourceTrigger=PropertyChanged}"
                                    Margin="0,0,0,12"/>

                                <TextBox
                                    materialDesign:HintAssist.Hint="Genre"
                                    materialDesign:HintAssist.IsFloating="True"
                                    Text="{Binding CoverGenre, UpdateSourceTrigger=PropertyChanged}"
                                    Margin="0,0,0,12"/>

                                <TextBox
                                    materialDesign:HintAssist.Hint="Book Description (helps AI understand content)"
                                    materialDesign:HintAssist.IsFloating="True"
                                    Text="{Binding CoverDescription, UpdateSourceTrigger=PropertyChanged}"
                                    AcceptsReturn="True"
                                    TextWrapping="Wrap"
                                    MinHeight="60"
                                    Margin="0,0,0,16"/>

                                <Separator Margin="0,8,0,16"/>

                                <TextBlock Text="Style Options" Style="{StaticResource SectionHeaderStyle}"/>

                                <ComboBox
                                    materialDesign:HintAssist.Hint="Cover Style"
                                    materialDesign:HintAssist.IsFloating="True"
                                    ItemsSource="{Binding AvailableStyles}"
                                    SelectedItem="{Binding SelectedStyle}"
                                    Margin="0,0,0,12"/>

                                <TextBox
                                    materialDesign:HintAssist.Hint="Mood (e.g., dark, mysterious, romantic)"
                                    materialDesign:HintAssist.IsFloating="True"
                                    Text="{Binding Mood, UpdateSourceTrigger=PropertyChanged}"
                                    Margin="0,0,0,12"/>

                                <TextBox
                                    materialDesign:HintAssist.Hint="Include Elements (comma-separated)"
                                    materialDesign:HintAssist.IsFloating="True"
                                    Text="{Binding IncludeElements, UpdateSourceTrigger=PropertyChanged}"
                                    Margin="0,0,0,12"/>

                                <TextBox
                                    materialDesign:HintAssist.Hint="Exclude Elements (comma-separated)"
                                    materialDesign:HintAssist.IsFloating="True"
                                    Text="{Binding ExcludeElements, UpdateSourceTrigger=PropertyChanged}"
                                    Margin="0,0,0,16"/>

                                <Separator Margin="0,8,0,16"/>

                                <TextBlock Text="Color Scheme" Style="{StaticResource SectionHeaderStyle}"/>

                                <Grid Margin="0,0,0,16">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,4,8">
                                        <TextBlock Text="Primary" FontSize="12"/>
                                        <TextBox Text="{Binding PrimaryColor, UpdateSourceTrigger=PropertyChanged}"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="0" Grid.Column="1" Margin="4,0,0,8">
                                        <TextBlock Text="Secondary" FontSize="12"/>
                                        <TextBox Text="{Binding SecondaryColor, UpdateSourceTrigger=PropertyChanged}"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,4,0">
                                        <TextBlock Text="Background" FontSize="12"/>
                                        <TextBox Text="{Binding BackgroundColor, UpdateSourceTrigger=PropertyChanged}"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="1" Grid.Column="1" Margin="4,0,0,0">
                                        <TextBlock Text="Text" FontSize="12"/>
                                        <TextBox Text="{Binding TextColor, UpdateSourceTrigger=PropertyChanged}"/>
                                    </StackPanel>
                                </Grid>

                                <Separator Margin="0,8,0,16"/>

                                <TextBlock Text="Generation Settings" Style="{StaticResource SectionHeaderStyle}"/>

                                <ComboBox
                                    materialDesign:HintAssist.Hint="AI Provider"
                                    materialDesign:HintAssist.IsFloating="True"
                                    ItemsSource="{Binding AvailableProviders}"
                                    SelectedItem="{Binding SelectedProvider}"
                                    Margin="0,0,0,12"/>

                                <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                    <TextBlock Text="Variations:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <Slider 
                                        Value="{Binding VariationCount}"
                                        Minimum="1"
                                        Maximum="8"
                                        Width="150"
                                        TickFrequency="1"
                                        IsSnapToTickEnabled="True"/>
                                    <TextBlock Text="{Binding VariationCount}" VerticalAlignment="Center" Margin="8,0,0,0"/>
                                </StackPanel>

                                <TextBox
                                    materialDesign:HintAssist.Hint="Additional Instructions"
                                    materialDesign:HintAssist.IsFloating="True"
                                    Text="{Binding AdditionalInstructions, UpdateSourceTrigger=PropertyChanged}"
                                    AcceptsReturn="True"
                                    TextWrapping="Wrap"
                                    MinHeight="60"
                                    Margin="0,0,0,16"/>

                                <Button 
                                    Content="Get Prompt Suggestions"
                                    Command="{Binding GeneratePromptSuggestionsCommand}"
                                    Style="{StaticResource MaterialDesignOutlinedButton}"
                                    Margin="0,0,0,8"/>

                                <Button 
                                    Content="Generate Cover"
                                    Command="{Binding GenerateCoverCommand}"
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    Height="48"
                                    FontSize="16"/>
                            </StackPanel>
                        </materialDesign:Card>
                    </ScrollViewer>

                    <!-- Generated Variations -->
                    <Grid Grid.Column="1" Margin="8,0,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Status -->
                        <StackPanel Grid.Row="0" Margin="0,0,0,8" 
                                    Visibility="{Binding IsGenerating, Converter={StaticResource BoolToVisConverter}}">
                            <TextBlock Text="{Binding GenerationStatus}" FontSize="14"/>
                            <ProgressBar Value="{Binding GenerationProgress}" Height="4" Margin="0,8,0,0"/>
                        </StackPanel>

                        <!-- Prompt Suggestions -->
                        <materialDesign:Card Grid.Row="0" Padding="12" Margin="0,0,0,8"
                                             Visibility="{Binding PromptSuggestions.Count, Converter={StaticResource BoolToVisConverter}}">
                            <StackPanel>
                                <TextBlock Text="Prompt Suggestions" FontWeight="Medium" Margin="0,0,0,8"/>
                                <ItemsControl ItemsSource="{Binding PromptSuggestions}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Button 
                                                Content="{Binding}"
                                                Command="{Binding DataContext.UsePromptSuggestionCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource MaterialDesignFlatButton}"
                                                HorizontalContentAlignment="Left"
                                                Margin="0,0,0,4"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </materialDesign:Card>

                        <!-- Variations Grid -->
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding GeneratedVariations}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <materialDesign:Card 
                                            Width="280" 
                                            Margin="8" 
                                            Padding="8"
                                            Cursor="Hand">
                                            <StackPanel>
                                                <Image 
                                                    Source="{Binding ImagePath}" 
                                                    Style="{StaticResource CoverImageStyle}"
                                                    Height="350"/>

                                                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                                    <materialDesign:RatingBar 
                                                        Value="{Binding Rating}"
                                                        Max="5"
                                                        Margin="0,0,8,0"/>

                                                    <Button
                                                        Content="Save"
                                                        Command="{Binding DataContext.SaveVariationAsCoverCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding}"
                                                        Style="{StaticResource MaterialDesignFlatButton}"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </materialDesign:Card>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </Grid>
            </TabItem>

            <!-- Templates Tab -->
            <TabItem Header="Templates">
                <Grid Margin="16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="300"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Template Filters -->
                    <materialDesign:Card Grid.Column="0" Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="Filter Templates" Style="{StaticResource SectionHeaderStyle}"/>

                            <TextBox
                                materialDesign:HintAssist.Hint="Filter by Genre"
                                materialDesign:HintAssist.IsFloating="True"
                                Text="{Binding TemplateGenreFilter, UpdateSourceTrigger=PropertyChanged}"
                                Margin="0,0,0,12"/>

                            <Button 
                                Content="Apply Filter"
                                Command="{Binding LoadTemplatesCommand}"
                                Style="{StaticResource MaterialDesignOutlinedButton}"/>
                        </StackPanel>
                    </materialDesign:Card>

                    <!-- Template Grid -->
                    <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding AvailableTemplates}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <materialDesign:Card 
                                        Width="260" 
                                        Margin="8" 
                                        Padding="16"
                                        Cursor="Hand">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Name}" FontWeight="Medium" FontSize="16"/>
                                            <TextBlock Text="{Binding Genre}" 
                                                       Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                       Margin="0,4,0,8"/>
                                            <TextBlock Text="{Binding Description}" 
                                                       TextWrapping="Wrap"
                                                       MaxHeight="60"/>

                                            <!-- Color Preview -->
                                            <StackPanel Orientation="Horizontal" Margin="0,12,0,8">
                                                <Rectangle Width="24" Height="24" 
                                                           Fill="{Binding ColorScheme.PrimaryColor}" 
                                                           Margin="0,0,4,0"/>
                                                <Rectangle Width="24" Height="24" 
                                                           Fill="{Binding ColorScheme.SecondaryColor}" 
                                                           Margin="0,0,4,0"/>
                                                <Rectangle Width="24" Height="24" 
                                                           Fill="{Binding ColorScheme.BackgroundColor}" 
                                                           Margin="0,0,4,0"/>
                                                <Rectangle Width="24" Height="24" 
                                                           Fill="{Binding ColorScheme.AccentColor}"/>
                                            </StackPanel>

                                            <Button 
                                                Content="Use Template"
                                                Command="{Binding DataContext.CreateFromTemplateCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                Style="{StaticResource MaterialDesignRaisedButton}"
                                                HorizontalAlignment="Stretch"/>
                                        </StackPanel>
                                    </materialDesign:Card>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </TabItem>

            <!-- My Covers Tab -->
            <TabItem Header="My Covers">
                <Grid Margin="16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="400"/>
                    </Grid.ColumnDefinitions>

                    <!-- Covers Grid -->
                    <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding AllCovers}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <materialDesign:Card 
                                        Width="220" 
                                        Margin="8" 
                                        Padding="8"
                                        Cursor="Hand">
                                        <StackPanel>
                                            <Grid>
                                                <Image 
                                                    Source="{Binding FrontCoverPath}" 
                                                    Height="300"
                                                    Stretch="Uniform"/>
                                                
                                                <!-- Active Badge -->
                                                <Border 
                                                    Background="{DynamicResource MaterialDesignPrimaryHueMidBrush}"
                                                    CornerRadius="4"
                                                    Padding="8,4"
                                                    HorizontalAlignment="Right"
                                                    VerticalAlignment="Top"
                                                    Margin="8"
                                                    Visibility="{Binding IsActive, Converter={StaticResource BoolToVisConverter}}">
                                                    <TextBlock Text="ACTIVE" Foreground="White" FontSize="10"/>
                                                </Border>
                                            </Grid>

                                            <TextBlock 
                                                Text="{Binding Title}" 
                                                FontWeight="Medium"
                                                Margin="0,8,0,0"
                                                TextTrimming="CharacterEllipsis"/>

                                            <TextBlock 
                                                Text="{Binding Style}" 
                                                FontSize="12"
                                                Foreground="{DynamicResource MaterialDesignBodyLight}"/>

                                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                                <Button
                                                    ToolTip="Set as Active"
                                                    Command="{Binding DataContext.SetActiveCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource MaterialDesignIconButton}"
                                                    Height="32" Width="32">
                                                    <materialDesign:PackIcon Kind="Check" Height="18" Width="18"/>
                                                </Button>

                                                <Button
                                                    ToolTip="Delete"
                                                    Command="{Binding DataContext.DeleteCoverCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource MaterialDesignIconButton}"
                                                    Height="32" Width="32">
                                                    <materialDesign:PackIcon Kind="Delete" Height="18" Width="18"/>
                                                </Button>
                                            </StackPanel>
                                        </StackPanel>
                                    </materialDesign:Card>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- Selected Cover Details -->
                    <materialDesign:Card Grid.Column="1" Style="{StaticResource CardStyle}" DataContext="{Binding SelectedCover}">
                        <StackPanel>
                            <TextBlock Text="Cover Details" Style="{StaticResource SectionHeaderStyle}"/>

                            <Image 
                                Source="{Binding FrontCoverPath}"
                                MaxHeight="350"
                                Stretch="Uniform"
                                Margin="0,0,0,16"/>

                            <TextBlock Text="{Binding Title}" FontSize="18" FontWeight="Medium"/>
                            <TextBlock Text="{Binding Style}" Foreground="{DynamicResource MaterialDesignBodyLight}" Margin="0,4,0,12"/>

                            <TextBlock Text="Generation Prompt:" FontWeight="Medium" Margin="0,8,0,4"/>
                            <TextBlock Text="{Binding GenerationPrompt}" TextWrapping="Wrap" FontSize="12"/>
                        </StackPanel>
                    </materialDesign:Card>
                </Grid>
            </TabItem>

            <!-- Print Cover Tab -->
            <TabItem Header="Print Cover">
                <Grid Margin="16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="380"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Print Settings -->
                    <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <!-- Specifications -->
                            <materialDesign:Card Style="{StaticResource CardStyle}">
                                <StackPanel>
                                    <TextBlock Text="Print Specifications" Style="{StaticResource SectionHeaderStyle}"/>

                                    <TextBox
                                        materialDesign:HintAssist.Hint="Page Count"
                                        materialDesign:HintAssist.IsFloating="True"
                                        Text="{Binding PageCount, UpdateSourceTrigger=PropertyChanged}"
                                        Margin="0,0,0,12"/>

                                    <ComboBox
                                        materialDesign:HintAssist.Hint="Trim Size"
                                        materialDesign:HintAssist.IsFloating="True"
                                        ItemsSource="{Binding AvailableTrimSizes}"
                                        SelectedItem="{Binding SelectedTrimSize}"
                                        Margin="0,0,0,12"/>

                                    <ComboBox
                                        materialDesign:HintAssist.Hint="Paper Type"
                                        materialDesign:HintAssist.IsFloating="True"
                                        ItemsSource="{Binding AvailablePaperTypes}"
                                        SelectedItem="{Binding SelectedPaperType}"
                                        Margin="0,0,0,16"/>

                                    <Button 
                                        Content="Calculate Specifications"
                                        Command="{Binding CalculateSpecificationsCommand}"
                                        Style="{StaticResource MaterialDesignRaisedButton}"/>

                                    <!-- Calculated Specs -->
                                    <materialDesign:Card 
                                        Padding="12" 
                                        Margin="0,16,0,0"
                                        Background="{DynamicResource MaterialDesignCardBackground}"
                                        DataContext="{Binding Specifications}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Spine Width:"/>
                                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SpineWidth, StringFormat='{}{0:F3} in'}"/>

                                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Full Width:" Margin="0,4,0,0"/>
                                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding FullCoverWidthInches, StringFormat='{}{0:F2} in'}" Margin="0,4,0,0"/>

                                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Full Height:" Margin="0,4,0,0"/>
                                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding FullCoverHeightInches, StringFormat='{}{0:F2} in'}" Margin="0,4,0,0"/>
                                        </Grid>
                                    </materialDesign:Card>
                                </StackPanel>
                            </materialDesign:Card>

                            <!-- Back Cover Content -->
                            <materialDesign:Card Style="{StaticResource CardStyle}">
                                <StackPanel>
                                    <TextBlock Text="Back Cover Content" Style="{StaticResource SectionHeaderStyle}"/>

                                    <TextBox
                                        materialDesign:HintAssist.Hint="Book Blurb"
                                        materialDesign:HintAssist.IsFloating="True"
                                        Text="{Binding BackCoverBlurb, UpdateSourceTrigger=PropertyChanged}"
                                        AcceptsReturn="True"
                                        TextWrapping="Wrap"
                                        MinHeight="100"
                                        Margin="0,0,0,12"/>

                                    <TextBox
                                        materialDesign:HintAssist.Hint="Author Bio"
                                        materialDesign:HintAssist.IsFloating="True"
                                        Text="{Binding AuthorBio, UpdateSourceTrigger=PropertyChanged}"
                                        AcceptsReturn="True"
                                        TextWrapping="Wrap"
                                        MinHeight="60"
                                        Margin="0,0,0,12"/>

                                    <TextBox
                                        materialDesign:HintAssist.Hint="Price (e.g., $14.99)"
                                        materialDesign:HintAssist.IsFloating="True"
                                        Text="{Binding Price, UpdateSourceTrigger=PropertyChanged}"
                                        Margin="0,0,0,12"/>

                                    <CheckBox
                                        Content="Include Barcode"
                                        IsChecked="{Binding IncludeBarcode}"
                                        Margin="0,0,0,16"/>

                                    <!-- Review Quotes -->
                                    <TextBlock Text="Review Quotes" FontWeight="Medium" Margin="0,8,0,8"/>
                                    
                                    <ItemsControl ItemsSource="{Binding ReviewQuotes}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Margin="0,0,0,8">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <StackPanel Grid.Column="0">
                                                        <TextBox
                                                            materialDesign:HintAssist.Hint="Quote"
                                                            Text="{Binding Quote, UpdateSourceTrigger=PropertyChanged}"
                                                            TextWrapping="Wrap"
                                                            Margin="0,0,0,4"/>
                                                        <TextBox
                                                            materialDesign:HintAssist.Hint="Source"
                                                            Text="{Binding Source, UpdateSourceTrigger=PropertyChanged}"/>
                                                    </StackPanel>

                                                    <Button 
                                                        Grid.Column="1"
                                                        Command="{Binding DataContext.RemoveReviewQuoteCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding}"
                                                        Style="{StaticResource MaterialDesignIconButton}"
                                                        VerticalAlignment="Top">
                                                        <materialDesign:PackIcon Kind="Close"/>
                                                    </Button>
                                                </Grid>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>

                                    <Button 
                                        Content="Add Quote"
                                        Command="{Binding AddReviewQuoteCommand}"
                                        Style="{StaticResource MaterialDesignOutlinedButton}"
                                        HorizontalAlignment="Left"/>
                                </StackPanel>
                            </materialDesign:Card>

                            <!-- Generate Button -->
                            <materialDesign:Card Style="{StaticResource CardStyle}">
                                <Button 
                                    Content="Generate Full Cover"
                                    Command="{Binding GenerateFullCoverCommand}"
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    Height="48"
                                    FontSize="16"/>
                            </materialDesign:Card>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Preview -->
                    <materialDesign:Card Grid.Column="1" Style="{StaticResource CardStyle}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Text="Full Cover Preview" Style="{StaticResource SectionHeaderStyle}"/>

                            <Border Grid.Row="1" 
                                    Background="{DynamicResource MaterialDesignCardBackground}"
                                    CornerRadius="4">
                                <Image 
                                    Source="{Binding SelectedCover.FullCoverPath}"
                                    Stretch="Uniform"
                                    RenderOptions.BitmapScalingMode="HighQuality"/>
                            </Border>
                        </Grid>
                    </materialDesign:Card>
                </Grid>
            </TabItem>

            <!-- Export Tab -->
            <TabItem Header="Export">
                <Grid Margin="16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="400"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Export Options -->
                    <materialDesign:Card Grid.Column="0" Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="Export for KDP" Style="{StaticResource SectionHeaderStyle}"/>

                            <TextBlock 
                                Text="Export your cover in the correct format for Amazon KDP."
                                TextWrapping="Wrap"
                                Foreground="{DynamicResource MaterialDesignBodyLight}"
                                Margin="0,0,0,16"/>

                            <ComboBox
                                materialDesign:HintAssist.Hint="Format Type"
                                materialDesign:HintAssist.IsFloating="True"
                                ItemsSource="{Binding AvailableFormatTypes}"
                                SelectedItem="{Binding ValidationFormatType}"
                                Margin="0,0,0,16"/>

                            <Button 
                                Content="Validate Cover"
                                Command="{Binding ValidateCoverCommand}"
                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                Margin="0,0,0,8"/>

                            <Button 
                                Content="Export for KDP"
                                Command="{Binding ExportForKDPCommand}"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                Height="48"/>

                            <!-- Format Requirements -->
                            <materialDesign:Card Padding="12" Margin="0,24,0,0" Background="{DynamicResource MaterialDesignCardBackground}">
                                <StackPanel>
                                    <TextBlock Text="KDP Requirements" FontWeight="Medium" Margin="0,0,0,8"/>
                                    
                                    <TextBlock Text="eBook Cover:" FontWeight="Medium" Margin="0,8,0,4"/>
                                    <TextBlock Text="• Minimum: 1000 x 1600 pixels" FontSize="12"/>
                                    <TextBlock Text="• Ideal: 1600 x 2560 pixels" FontSize="12"/>
                                    <TextBlock Text="• Format: JPEG or TIFF" FontSize="12"/>
                                    <TextBlock Text="• Color: RGB" FontSize="12"/>

                                    <TextBlock Text="Paperback Cover:" FontWeight="Medium" Margin="0,12,0,4"/>
                                    <TextBlock Text="• DPI: 300" FontSize="12"/>
                                    <TextBlock Text="• Format: PDF" FontSize="12"/>
                                    <TextBlock Text="• Include bleed: 0.125 in" FontSize="12"/>
                                    <TextBlock Text="• Color: CMYK preferred" FontSize="12"/>
                                </StackPanel>
                            </materialDesign:Card>
                        </StackPanel>
                    </materialDesign:Card>

                    <!-- Validation Results -->
                    <materialDesign:Card Grid.Column="1" Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="Validation Results" Style="{StaticResource SectionHeaderStyle}"/>

                            <DataGrid 
                                ItemsSource="{Binding ValidationIssues}"
                                AutoGenerateColumns="False"
                                IsReadOnly="True"
                                CanUserAddRows="False"
                                MaxHeight="400">
                                
                                <DataGrid.Columns>
                                    <DataGridTemplateColumn Header="Type" Width="80">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <materialDesign:PackIcon>
                                                    <materialDesign:PackIcon.Style>
                                                        <Style TargetType="materialDesign:PackIcon">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Type}" Value="Error">
                                                                    <Setter Property="Kind" Value="AlertCircle"/>
                                                                    <Setter Property="Foreground" Value="Red"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Type}" Value="Warning">
                                                                    <Setter Property="Kind" Value="Alert"/>
                                                                    <Setter Property="Foreground" Value="Orange"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Type}" Value="Info">
                                                                    <Setter Property="Kind" Value="Information"/>
                                                                    <Setter Property="Foreground" Value="Blue"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </materialDesign:PackIcon.Style>
                                                </materialDesign:PackIcon>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTextColumn Header="Issue" Binding="{Binding Message}" Width="*"/>
                                    <DataGridTextColumn Header="Current" Binding="{Binding CurrentValue}" Width="120"/>
                                    <DataGridTextColumn Header="Required" Binding="{Binding RequiredValue}" Width="120"/>
                                </DataGrid.Columns>
                            </DataGrid>

                            <!-- No Issues Message -->
                            <StackPanel 
                                HorizontalAlignment="Center" 
                                VerticalAlignment="Center"
                                Margin="0,40,0,0"
                                Visibility="{Binding ValidationIssues.Count, Converter={StaticResource BoolToVisConverter}, ConverterParameter=Inverse}">
                                <materialDesign:PackIcon 
                                    Kind="CheckCircle" 
                                    Foreground="Green"
                                    Width="64" 
                                    Height="64"
                                    HorizontalAlignment="Center"/>
                                <TextBlock 
                                    Text="Cover passes all validation checks!"
                                    FontSize="16"
                                    HorizontalAlignment="Center"
                                    Margin="0,16,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </materialDesign:Card>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Loading Overlay -->
        <Grid Grid.RowSpan="2" 
              Background="#80000000"
              Visibility="{Binding IsGenerating, Converter={StaticResource BoolToVisConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="200"/>
                <TextBlock Text="{Binding GenerationStatus}" Foreground="White" HorizontalAlignment="Center" Margin="0,16,0,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
